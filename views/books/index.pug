extends ../layout 

block content
    h1 Books
    p
        a.button(href='/create') Create New Book
    table
        thead
            tr
            th Title
            th Author
            th Genre
            th Year
        tbody
        //- use loop here
        each book in books
            tr
                td
                    a(href=`/books/${book.id}`)= book.title
                td= book.author
                td= book.genre
                td= book.year